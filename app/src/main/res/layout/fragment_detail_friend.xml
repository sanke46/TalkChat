<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#fff"
    tools:context="com.sanke.ilafedoseev.talkchat.Fragments.DetailFriendFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/avatar"
        android:text="EВ"
        android:background="@drawable/cycle_name"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:textColor="#fff"
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginTop="0dp"
        android:textSize="50sp"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cycle_name"/>

        <TextView
            android:text="online"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="#d1d1d1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ilya Fedoseev"
                android:textSize="28sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ilyafedoseev@gmail.com"
                android:textColor="#d1d1d1"
                android:textSize="20sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="match_parent">
        <Button
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Начать чат"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="-5dp"
            android:background="#6782d3"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Удалить друга"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="-5dp"
                android:background="#6782d3"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
</LinearLayout>




</FrameLayout>
